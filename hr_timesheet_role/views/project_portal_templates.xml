    <template id="portal_my_task" inherit_id="hr_timesheet.portal_my_task" name="Portal: My Task with Timesheets">
        <xpath expr="//table//th[text() = 'Employee']" position="after">
            <th>Role</th>
        </xpath>
        <xpath expr="//table//td/t[@t-esc='timesheet.employee_id.name']/.." position="after">
            <td><t t-esc="timesheet.role_id.name"/></td>
        </xpath>
    </template>

</odoo>
